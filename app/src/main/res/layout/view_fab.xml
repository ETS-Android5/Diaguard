<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="com.faltenreich.diaguard.shared.view.coordinatorlayout.SlideOutBehavior"
    app:layout_dodgeInsetEdges="bottom">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/measurement_add"
        android:src="@drawable/ic_add_fab"
        app:backgroundTint="@android:color/white"
        app:fabSize="mini"
        app:tint="?android:textColorTertiary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_primary"
        style="?attr/floatingActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/entry_new"
        android:src="@drawable/ic_add_fab"
        app:useCompatPadding="true" />

</LinearLayout>